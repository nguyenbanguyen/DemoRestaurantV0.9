@using DemoRestaurant.Models;
@model ApplicationUser
@{
    ViewBag.Title = "Sửa thông tin tài khoản";
}

<h2>@ViewBag.Title</h2>
<hr/>
<div class="col-lg-12 text-center">
    @using (var f = Html.Bootstrap().Begin(new Form().Type(FormType.Horizontal)))
    {     @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row">
            @(Html.Bootstrap().LabelFor(m => m.UserName).LabelText("Họ tên").ShowRequiredStar(true).Class("col-lg-3 text-left"))
            @Html.Bootstrap().TextBoxFor(m => m.UserName).Class("col-lg-9 form-control")
        </div>
        <div class="row">
            @(Html.Bootstrap().LabelFor(m => m.Email).LabelText("Hòm thư").ShowRequiredStar(true).Class("col-lg-3 text-left"))
            @Html.Bootstrap().TextBoxFor(m => m.Email).Class("col-lg-9 form-control")
        </div>
        <div class="row">
            @(Html.Bootstrap().LabelFor(m => m.EmailConfirmed).LabelText("Xác nhận thư").Class("col-lg-3 text-left"))
            @Html.Bootstrap().CheckBoxFor(m => m.EmailConfirmed).Class("col-lg-3 form-control")
        </div> 
        <div class="row">
            @(Html.Bootstrap().LabelFor(m => m.EmailConfirmed).LabelText("Số Điện thoại").Class("col-lg-3 text-left"))
            @Html.Bootstrap().TextBoxFor(m => m.PhoneNumber).Class("col-lg-9 form-control")
        </div>
        <div class="row">
            @(Html.Bootstrap().LabelFor(m => m.EmailConfirmed).LabelText("Ngày khóa tài khoản").Class("col-lg-3 text-left"))
            @Html.Bootstrap().TextBoxFor(m => m.LockoutEndDateUtc).Class("col-lg-9 form-control")
        </div>

        <div class="row col-lg-6 text-right">
            @Html.Bootstrap().SubmitButton().Text("Xác nhận").Class("btn btn-primary")
            @Html.Bootstrap().ActionLinkButton("Không sửa", "UserIndex").Class("btn btn-primary")
        </div>


    }
</div>   
 