@model DemoRestaurant.Models.CheckOutViewModel

@{
    ViewBag.Title = "Address And Payment";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>
@using (Html.BeginForm())
{

    <h2>Thông tin chọn món</h2>



     <table class="table">
         <tr>
             <td>Khách hàng :</td>
             <td>@User.Identity.Name</td>
         </tr>


         @*need to fix customer/account controller 1st*@
         <tr>
             <td>Vị trí nhận đồ :</td>
             @*<td>@Html.DisplayTextFor( model => model.ShippingAddress)</td>*@
             @*<td>@ViewBag.ShippingAddress</td>*@
             <td>@Html.EditorFor( model =>model.ShippingAddress)</td>
         </tr>

         <tr>
             <td>Điện thoại :</td>
             <td>@Html.DisplayTextFor(model => model.CustomerPhone)</td>

         </tr>
         <tr>
             <td>Ngày giao :</td>
             <td class="form-group input-group-sm">
                @Html.TextBoxFor(model => model.ShippingDate, new { @class = "form-control datepicker", placeholder = "Enter Drop-off date here..." })
              </td>

         </tr>
         <tr>
             <td>Tổng cộng :</td>
             <td>@Html.DisplayTextFor(model => model.ToTalPrice)</td>




         </tr>
         <tr>
             <td>@ViewBag.exception</td>
         </tr>

     </table>

    <div class="inputForm">
        <p class="buttonSet">
            <button type="submit" class="buttons submitButton">Gọi món</button>
        </p>
    </div>
                 }
